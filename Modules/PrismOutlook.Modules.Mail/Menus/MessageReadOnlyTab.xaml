<Fluent:RibbonTabItem
  x:Class="PrismOutlook.Modules.Mail.Menus.MessageReadOnlyTab"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Fluent="urn:fluent-ribbon"
  Header="Home">

  <Fluent:RibbonGroupBox Header="Delete">
    <Fluent:Button
      Command="{Binding DeleteMessageCommand}"
      Header="Delete"
      Icon="/PrismOutlook.Modules.Mail;component/Images/Delete16.png"
      LargeIcon="/PrismOutlook.Modules.Mail;component/Images/Delete32.png" />
  </Fluent:RibbonGroupBox>

  <Fluent:RibbonGroupBox Header="Respond">
    <Fluent:Button
      Command="{Binding MessageCommand}"
      CommandParameter="Reply"
      Header="Reply"
      Icon="/PrismOutlook.Modules.Mail;component/Images/Reply16.png"
      LargeIcon="/PrismOutlook.Modules.Mail;component/Images/Reply32.png" />
    <Fluent:Button
      Command="{Binding MessageCommand}"
      CommandParameter="ReplyAll"
      Header="ReplyAll"
      Icon="/PrismOutlook.Modules.Mail;component/Images/ReplyAll16.png"
      LargeIcon="/PrismOutlook.Modules.Mail;component/Images/ReplyAll32.png" />
    <Fluent:Button
      Command="{Binding MessageCommand}"
      CommandParameter="Forward"
      Header="Forward"
      Icon="/PrismOutlook.Modules.Mail;component/Images/Forward16.png"
      LargeIcon="/PrismOutlook.Modules.Mail;component/Images/Forward32.png" />
  </Fluent:RibbonGroupBox>
</Fluent:RibbonTabItem>
